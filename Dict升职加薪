a = {"王丽":{"部门":"科技部","工资":3000,"级别":1},
     "林劫":{"部门":"市场部","工资":6000,"级别":3},
     "刘德":{"部门":"市场部","工资":6000,"级别":2},
     "周杰":{"部门":"市场部","工资":5000,"级别":2},
     "张学":{"部门":"科技部","工资":4000,"级别":1},}
print("全体员工信息如下:")
print(a)
print("全体员工升职加薪后:")
for name in a:
    if a[name]["级别"] == 1:
        a[name]["工资"]+=1000
print(a)
