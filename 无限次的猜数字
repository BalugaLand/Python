import random
num = random.randint(1,100)
count = 0
flag = True
while flag:
    guess_num = int(input("请猜测一个数字:"))
    count += 1
    if guess_num == num:
        print('猜对了')
        flag = False
    else:
        if guess_num > num :
            print("大了")
        else:
            print("小了")
print(f"你一共猜测了{count}次。")
